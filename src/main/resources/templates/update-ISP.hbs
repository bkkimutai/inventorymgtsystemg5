{{#partial "content"}}

    <div class="container">
        <h1 class="text-center">Updating {{partnerISP.partnerName}}</h1>
        <form action="/update-ISP" method="post">
            <div class="form-group">
                <label for="partnerName">Partner ISP Name :</label>
                <input type="text" id="partnerName" name="partnerName" class="form-control" aria-describedby="emailHelp" value="{{partnerISP.partnerName}}" readonly>
            </div>
            <div class="form-group">
                <label for="partnerEmail">Partner Email :</label>
                <input type="email" id="partnerEmail" name="partnerEmail" class="form-control" aria-describedby="emailHelp" value="{{partnerISP.partnerEmail}}"  required>
            </div>
            <div class="form-group">
                <label for="description">Description:</label>
                <input type="text" id="description" name="description" class="form-control" aria-describedby="emailHelp" value="{{partnerISP.description}}" required>
            </div>

            <button class="btn btn-primary" type="submit">Update Partner ISP</button>
        </form>
    </div>

{{/partial}}

{{> "layout.hbs"}}